{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 0,
  "assignees": [
    "bukowa"
  ],
  "bumpVersion": "patch",
  "gitIgnoredAuthors": [
    "gitbukowa@gmail.com",
    "git.bukowa@gmail.com"
  ],
  "prBodyColumns": [
    "Package",
    "Type",
    "Update",
    "Change",
    "Package file",
    "References"
  ],
  "commitMessageAction": "{{{updateType}}} update",
  "semanticCommits": "enabled",
  "semanticCommitScope": "deps",
  "semanticCommitType": "chore",
  "commitBodyTable": true,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "pinDigests": true,
      "semanticCommitScope": "deps,gh-actions"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": true,
        "semanticCommitScope": "deps,docker"
    }
  ]
}
